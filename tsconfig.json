{
  "compilerOptions": {
   "target": "es2017", // or "es2017", "es2018", etc.
    "lib": ["dom", "es2017"], // include "es2016" or later
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
